                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="25dp"
                android:text="@string/info_card_1"
                android:textSize="15dp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>

