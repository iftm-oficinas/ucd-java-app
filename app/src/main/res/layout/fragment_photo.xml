<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:id="@+id/scroll"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:fillViewport="true">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/bar_top"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_top"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/main_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="250dp"
                android:src="@drawable/ic_tab_photo_light" />

        </RelativeLayout>

        <!--Metade de baixo da tela ( adicionar nova foto e botÃ£o para realizar denuncia-->
        <android.support.v7.widget.CardView
            android:id="@+id/bar_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/add_image_botton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_add_box_black_48dp" />

                <ImageView
                    android:id="@+id/image_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/add_image_botton"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp" />

                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/image_view1"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp" />

                <ImageView
                    android:id="@+id/image_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/image_view2"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    android:minHeight="50dp"
                    android:minWidth="50dp" />

                <Button
                    android:id="@+id/submit_complaint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:enabled="false"
                    android:text="@string/photo_button"
                    android:textColor="@color/cardview_light_background" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <!--</ScrollView>-->


</RelativeLayout>