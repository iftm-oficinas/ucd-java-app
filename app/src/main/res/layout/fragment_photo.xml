<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bar_top"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar_top"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/subHeader1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_subHeader_1"
                    android:textColor="@color/colorForeground"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subHeader1"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_lat"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/latitude"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_lon"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subHeader2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/longitude"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_subHeader_2"
                    android:textColor="@color/colorForeground"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subHeader2"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_rua"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bairro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rua"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_bairro"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bairro"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_cidade"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bairro"
                    android:layout_toRightOf="@id/cidade"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_uf"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subHeader3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cidade"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/photo_subHeader_3"
                    android:textColor="@color/colorForeground"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/obs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/subHeader3"
                    android:layout_margin="10dp"
                    android:background="@color/colorBackgroundCardDefault"
                    android:enabled="false"
                    android:hint="@string/photo_obs_hint"
                    android:textColorHint="@color/colorForeground"
                    android:textSize="15dp" />

            </RelativeLayout>

            <!--Metade de baixo da tela ( adicionar nova foto e botÃ£o para realizar denuncia-->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:maxHeight="30dp"
                        android:maxWidth="30dp" />

                    <!--<ImageButton-->
                    <!--android:id="@+id/add_image_botton"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:layout_toRightOf="@+id/image_test"-->
                    <!--android:src="@drawable/ic_add_box_black_36dp" />-->

                    <ImageView
                        android:id="@+id/add_image_botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/image_test"
                        android:src="@drawable/ic_add_box_black_48dp" />

                    <Button
                        android:id="@+id/submit_complaint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:enabled="false"
                        android:text="@string/photo_button"
                        android:textColor="@color/cardview_light_background" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>